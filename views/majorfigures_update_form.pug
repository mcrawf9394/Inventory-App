extends layout 

block content 
    h1= title
    form(method="post") 
        label(for="first_name") First Name 
        input(name='first_name' type="text" value=first_name)
        label(for='last_name') Last Name
        input(name='last_name' type='text' value=last_name)
        label(for="birthdate") Birth Day
        input(name="birthdate" type="date" value=birthdate)
        label(for="deathdate") Death Day 
        input(name="deathdate" type="date" value=deathdate)
        button(type="submit") Submit 
    if errors 
        for error in errors 
            p=error
