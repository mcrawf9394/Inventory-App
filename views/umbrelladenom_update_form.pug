extends layout 

block content 

    h1= title 
    form(method="post")
        label(for="name") Name 
        input(name="name" type="text" value=name required)
        label(for="summary") Summary 
        input(name="summary" type="text" value=summary required)
        button(type="submit") Submit 
    if errors 
        for error in errors 
            p=error  